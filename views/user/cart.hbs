{{#if product}}
<div class="cart">
  {{#each product}}
  <div class="cart-container" id="t{{this.item}}{{this.variant}}">
  {{#each this.products}}
    <div class="cart-image">
      <img src="./images/product-images/{{this.image1}}{{this._id}}.jpg" />
    </div>
    <div class="cart-content">
      <h1>
        {{this.name}}
      </h1>
      <p>
        Rs .
        {{this.price}}
      </p>
    {{/each}}
      <div class="btn-section">
        <button class="count-button" id="m{{this.item}}"
          onclick="quantity('{{this.item}}', 'dnc', '{{this.price}}')">
          -
        </button>
        <span id="{{this.item}}{{this.variant}}">
          {{this.quantity}}
        </span>
        <button class="count-button" onclick="quantity('{{this._id}}', 'inc', '{{this.price}}')">
          +
        </button>
        <br />
        <button class="delete-btn" onclick="deleteCartItem('{{this._id}}','{{this.name}}' , '{{this.price}}')">
          Delete
        </button>
      </div>
    </div>
  </div>
  {{/each}}
</div>
<div class="checkout">
  <div>
    <h3>Total Amuont</h3>
    <h3>Rs. <span id="total">{{total}}</span></h3>
  </div>
  <a href="/place-order">
    Place Order
  </a>
</div>
{{else}}
<div class="empty">
  <h1>
    Cart is Empty
  </h1>
</div>
{{/if}}